<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_flower_main_cv"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_flower_main_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_test"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    
    <ImageView
        android:layout_width="16dp"
        android:layout_height="14.63dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_home_like_black"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="@id/item_flower_main_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_flower_main_cv"/>

    <ImageView
        android:id="@+id/item_home_like_iv"
        android:layout_width="16dp"
        android:layout_height="14.63dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_home_like_white"
        app:layout_constraintEnd_toEndOf="@id/item_flower_main_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_flower_main_cv"/>

    <TextView
        android:id="@+id/item_flower_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[피오레 꽃집] 마음을 전하는 8월 꽃다발"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintTop_toBottomOf="@id/item_flower_main_cv"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>