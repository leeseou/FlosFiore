<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_popular_main_cv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_popular_main_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_test"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    
    <ImageView
        android:layout_width="20dp"
        android:layout_height="18.28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_home_like_black"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="@id/item_popular_main_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_popular_main_cv"/>

    <ImageView
        android:id="@+id/item_popular_like_iv"
        android:layout_width="20dp"
        android:layout_height="18.28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_home_like_white"
        app:layout_constraintEnd_toEndOf="@id/item_popular_main_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_popular_main_cv"/>

    <TextView
        android:id="@+id/item_popular_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="벨플로르"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintTop_toBottomOf="@id/item_popular_main_cv"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/item_popular_name_tv"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/item_popular_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시 노원구 중계동"
            android:textSize="10sp"
            android:textColor="#A1A1A1"
            android:fontFamily="@font/notosanscjkkr_regular"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_home_more_location"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>