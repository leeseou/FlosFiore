<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="34.5dp"
            android:src="@drawable/logo"/>

        <ImageView
            android:layout_width="128dp"
            android:layout_height="34.5dp"
            android:src="@drawable/flos_fiore"/>

        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="188dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="5dp"
            android:hint="아이디"
            android:textColorHint="#A4A4A4"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:backgroundTint="#A4A4A4"/>

        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="188dp"
            android:layout_height="44dp"
            android:paddingBottom="5dp"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:textColorHint="#A4A4A4"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:backgroundTint="#A4A4A4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_login_btn"
            android:layout_width="188dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:background="@drawable/login_btn_border"/>

        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/login_find_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_light"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/login_find_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_light"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text="소셜 계정으로 플로스 피오레를 이용해보세요"
            android:textSize="12sp"
            android:textColor="#A4A4A4"
            android:fontFamily="@font/notosanscjkkr_light"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_kakaotalk_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/kakaotalk"/>

            <ImageView
                android:id="@+id/login_google_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:src="@drawable/google"/>

            <ImageView
                android:id="@+id/login_naver_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/naver"/>

            <ImageView
                android:id="@+id/login_facebook_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/facebook"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_signup_btn"
            android:layout_width="188dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/home_btn_border"
            android:text="회원가입"
            android:textSize="14sp"
            android:textColor="@color/main_green1"
            android:fontFamily="@font/notosanscjkkr_medium"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>