<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="242dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_insta_main_cv"
        android:layout_width="242dp"
        android:layout_height="242dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_insta_main_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_test"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_insta_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회색 도시를 녹색으로 바꾸는 '플랜테리어'"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanscjkkr_bold"
        app:layout_constraintTop_toBottomOf="@id/item_insta_main_cv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_insta_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유럽에서는 블라블라"
        android:textSize="10sp"
        android:textColor="#A1A1A1"
        android:fontFamily="@font/notosanscjkkr_regular"
        app:layout_constraintTop_toBottomOf="@id/item_insta_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_insta_content_tv"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요"
            android:textSize="10sp"
            android:textColor="#A1A1A1"
            android:fontFamily="@font/notosanscjkkr_light"/>

        <TextView
            android:id="@+id/item_insta_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="52"
            android:textSize="10sp"
            android:textColor="#A1A1A1"
            android:fontFamily="@font/notosanscjkkr_bold"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>